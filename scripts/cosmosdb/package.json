{
  "name": "cosmosdb-scripts",
  "version": "1.0.0",
  "description": "CosmosDB initialization and management scripts for SaaS Management Application",
  "private": true,
  "scripts": {
    "init": "ts-node init-database.ts",
    "seed": "ts-node seed-data.ts",
    "seed:json": "ts-node seed-data-json.ts",
    "seed:json:dev": "ts-node seed-data-json.ts development",
    "seed:json:staging": "ts-node seed-data-json.ts staging",
    "seed:json:testing": "ts-node seed-data-json.ts testing",
    "cleanup": "ts-node cleanup-data.ts",
    "cleanup:stats": "ts-node cleanup-data.ts --stats",
    "cleanup:list": "ts-node cleanup-data.ts --list",
    "init:seed": "npm run init && npm run seed:json",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@azure/cosmos": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
