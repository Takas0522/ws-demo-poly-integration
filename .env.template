# Cosmos DB Database Name
COSMOSDB_DATABASE=saas-management-dev

# =============================================================================
# Node.js Configuration
# =============================================================================

# Node Environment (development, staging, production)
NODE_ENV=development

# =============================================================================
# Python Configuration
# =============================================================================

# Unbuffered Python output (for better logging in Docker)
PYTHONUNBUFFERED=1

# =============================================================================
# Development Configuration
# =============================================================================

# Enable development mode features
DEVELOPMENT=true

# =============================================================================
# Service Configuration
# =============================================================================

# Frontend Service
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# Auth Service
AUTH_SERVICE_PORT=8001
AUTH_SERVICE_URL=http://localhost:8001

# User Management Service
USER_MANAGEMENT_SERVICE_PORT=8002
USER_MANAGEMENT_SERVICE_URL=http://localhost:8002

# Service Setting Service
SERVICE_SETTING_SERVICE_PORT=8003
SERVICE_SETTING_SERVICE_URL=http://localhost:8003

# =============================================================================
# Authentication & Security
# =============================================================================

# JWT Secret Key (change this in production!)
# Production requirements: Minimum 32 characters, use strong random string
# Generate with: openssl rand -base64 32
JWT_SECRET_KEY=your-secret-key-change-in-production

# JWT Token Expiration (in seconds)
JWT_EXPIRATION=3600

# Password Hashing Rounds
BCRYPT_ROUNDS=12

# =============================================================================
# CORS Configuration
# =============================================================================

# Allowed CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8001,http://localhost:8002,http://localhost:8003

# =============================================================================
# Logging Configuration
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Format (json, text)
LOG_FORMAT=text

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable specific features
FEATURE_USER_REGISTRATION=true
FEATURE_EMAIL_VERIFICATION=false
FEATURE_TWO_FACTOR_AUTH=false
FEATURE_AUDIT_LOGGING=true

# =============================================================================
# Azure Configuration (for production)
# =============================================================================

# Azure Subscription ID
# AZURE_SUBSCRIPTION_ID=

# Azure Resource Group
# AZURE_RESOURCE_GROUP=

# Azure Region
# AZURE_REGION=japaneast

# =============================================================================
# Monitoring & Telemetry (for production)
# =============================================================================

# Application Insights Instrumentation Key
# APPINSIGHTS_INSTRUMENTATION_KEY=

# Enable Application Insights
# APPINSIGHTS_ENABLED=false
