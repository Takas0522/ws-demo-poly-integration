{
  "name": "ws-demo-poly-integration",
  "version": "1.0.0",
  "description": "SaaS Management Application - Polyrepo Integration",
  "private": true,
  "scripts": {
    "test:unit": "npm run test:unit:types && npm run test:unit:permissions && npm run test:unit:react-permissions",
    "test:unit:types": "cd packages/@types && npm test",
    "test:unit:permissions": "cd scripts/permissions && npm test",
    "test:unit:react-permissions": "cd packages/react-permissions && npm test",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:api": "jest --config jest.integration.config.js --testPathPattern=tests/integration/api",
    "test:integration:database": "jest --config jest.integration.config.js --testPathPattern=tests/integration/database",
    "test:integration:cross-service": "jest --config jest.integration.config.js --testPathPattern=tests/integration/cross-service",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "playwright:install": "playwright install --with-deps chromium"
  },
  "keywords": [
    "saas",
    "management",
    "polyrepo",
    "integration"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ms": "^2.1.0",
    "@types/node": "^20.10.6",
    "axios": "^1.6.5",
    "dotenv": "^16.3.1",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
